{
  "extends": "airbnb",
  "installedESLint": true,
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.base.js"
      }
    }
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "comma-dangle": [2, "never"],
    "max-len": [1, 120, 2, {"ignoreComments": true}],
    "no-constant-condition": ["warn", { "checkLoops": false }]
  },
  "globals": {
    "document": true,
    "window": true
  },
  "env": {
    "jest": true
  }
}
